{{#if siteSettings.invite_only}}
  <a name="story" class="anchor"></a>
  {{landing-text content="landing.launch.story.title" classes="title centered" url="#story" linkClass='p-link'}}
{{/if}}

<div class="{{topClasses}}">
  <div class="main">
    {{#unless siteSettings.invite_only}}
      {{landing-text content="landing.tagline" classes="title"}}
    {{/unless}}

    <div class="left">
      {{#if siteSettings.invite_only}}
        {{landing-text content="landing.launch.story.description" classes="small" markdown=true}}

        {{#unless site.mobileView}}
          <div class="bottom-left">
            {{static-image name='people/6'}}
            {{landing-text content="landing.launch.links.why" classes="small" markdown=true}}
            {{landing-text content="landing.launch.links.how" classes="small" markdown=true}}
            {{landing-text content="landing.launch.links.organisation" classes="small" markdown=true}}
          </div>
        {{/unless}}
      {{else}}
        {{landing-text classes='medium' content='landing.links.solve' emoji='man_pilot:t5'}}
        {{landing-text classes='medium' content='landing.links.technology' emoji='woman_technologist:t2'}}
        {{landing-text classes='medium' content='landing.links.contribute' emoji='park'}}
      {{/if}}
    </div>

    {{#unless siteSettings.invite_only}}
      {{locale-selection}}
    {{/unless}}
  </div>
  <div class="right">
    {{#if siteSettings.invite_only}}
      {{landing-contact type='launch' embedded=true}}
      {{#unless site.mobileView}}
        {{static-image name='people/35'}}
      {{/unless}}
    {{else}}
      {{landing-text content='landing.sign_up' classes="large"}}
      {{landing-text content="landing.sign_up_tagline" classes="small"}}
      {{outlet 'create-account'}}
    {{/if}}
  </div>
</div>

{{#if siteSettings.invite_only}}
  <div class="why centered">
    <a name="why" class="anchor"></a>
    {{landing-text classes="title centered" content="landing.launch.why.title" url="#why" linkClass='p-link'}}
    {{landing-text classes="small" content="landing.launch.why.description" markdown=true}}
    <a href='/start#story' class="btn btn-large btn-primary">
      {{i18n 'landing.launch.story.title'}}
    </a>
  </div>
  <div class="how centered">
    <a name="how" class="anchor"></a>
    {{landing-text classes="title centered" content="landing.launch.how.title" url="#how" linkClass='p-link'}}
    {{landing-text classes="small" content="landing.launch.how.description" markdown=true}}
    <a href='/start#story' class="btn btn-large btn-primary">
      {{i18n 'landing.launch.story.title'}}
    </a>
  </div>
{{else}}
  <div class="scroll-to-map centered" {{action 'scrollToMap'}}>
    {{landing-text classes="medium centered" content="landing.links.map" emoji="world_map"}}
    {{d-icon 'chevron-down'}}
  </div>

  <div class="bottom centered">
    {{map-component locations=locations zoom='2' center=mapCenter}}
  </div>
{{/if}}

<div class="landing-page {{contentClass}}">
  {{#if siteSettings.invite_only}}
    <div class="launch-landing">
      <div class="landing-banner" style="{{bannerStyle}}">
        <div class="landing-welcome">
          {{landing-text content="landing.launch.banner.title" classes="title"}}
          {{landing-text content="landing.launch.banner.subtitle" classes="small subtitle"}}
          {{landing-text content="landing.launch.banner.launching" classes="small launching"}}

          {{landing-text content="landing.launch.banner.link" classes="small" url='/start#story'}}
          {{#if isStart}}
            <a href='/start#story' class="btn btn-large btn-primary">
              {{i18n 'landing.launch.story.title'}}
            </a>
          {{/if}}
        </div>
      </div>
    </div>
  {{/if}}
  {{outlet 'content'}}
  <div class="centered">
    {{landing-footer}}
  </div>
</div>

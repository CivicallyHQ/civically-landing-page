{{#embedded-modal-body title=title embedded=embedded}}
  {{#if embedded}}
    <a name="contact"></a>
    {{#if title}}
      <div class="p-text large">{{i18n title}}</div>
    {{/if}}
  {{else}}
    <div class='type-buttons'>
      {{#each typeButtons as |t|}}
        {{d-button class=t.class action='setType' actionParam=t.name label=t.label}}
      {{/each}}
    </div>
  {{/if}}

  {{#if showName}}
    <div class="input">
      <label for='contact-name'>{{i18n nameLabel}}<span>*</span></label>
      {{text-field value=name
                   placeholderKey=namePlaceholder
                   autocorrect="off"
                   autocapitalize="off"}}
    </div>
  {{/if}}

  <div class="input email">
    {{#unless isLaunch}}
      <label for='contact-email'>{{i18n emailLabel}}<span>*</span></label>
    {{/unless}}
    {{text-field value=email
                 placeholderKey=emailPlaceholder
                 autocorrect="off"
                 autocapitalize="off"}}
    <div class="fail">{{emailValidationError}}</div>
  </div>

  {{#if showPhone}}
    <div class="input phone">
      <label for='contact-phone'>{{i18n phoneLabel}}</label>
      {{phone-input phoneValidation="phoneValidation"
                    placeholder=phonePlaceholder}}
    </div>
  {{/if}}

  {{#if showLocation}}
    <div class="input location">
      {{input value=location placeholder=(i18n locationPlaceholder)}}
    </div>
  {{/if}}

  {{#if forInstitution}}
    <div class="input institution">
      <label for='contact-institution'>{{i18n institutionLabel}}<span>*</span></label>
      {{text-field value=institution
                   placeholderKey=institutionPlaceholder
                   autocorrect="off"
                   autocapitalize="off"}}
    </div>
    <div class="input">
      <label for='contact-position'>{{i18n positionLabel}}<span>*</span></label>
      {{text-field value=position
                   placeholderKey=positionPlaceholder
                   autocorrect="off"
                   autocapitalize="off"}}
    </div>
  {{/if}}

  {{#if showMessage}}
    <div class="input message">
      <label>{{i18n messageLabel}}<span>*</span></label>
      {{textarea value=message
                 class="contact-message"
                 placeholder=(i18n messagePlaceholder)}}
    </div>
  {{/if}}

  {{#if showPrivacy}}
    <div class='privacy'>
      {{{i18n 'landing.launch.contact.privacy'}}}
    </div>
  {{/if}}

{{/embedded-modal-body}}

<div class="modal-footer">
  {{d-button class='btn btn-primary'
             disabled=submitDisabled
             action="submitContact"
             label=submitLabel}}
  <div class="info">
    {{conditional-loading-spinner condition=submitting size="small"}}
    <span class="contact-result">{{contactResult}}</span>
  </div>
</div>

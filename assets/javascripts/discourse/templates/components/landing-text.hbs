{{#if icon}}
  <i class="fa fa-{{icon}}" aria-hidden="true"></i>
{{/if}}
{{#if emoji}}
  {{replace-emoji formattedEmoji}}
{{/if}}
{{#if linkTo}}
  {{#link-to linkTo}}{{text}}{{/link-to}}
{{else}}
  {{#if url}}
    <a href="{{url}}" class="{{linkClass}}">{{text}}</a>
  {{else if name}}
    <a name="{{name}}" class="p-link">{{text}}</a>
  {{else}}
    <span class="{{textClasses}}">
      {{#if image}}
        <span class="{{imageClasses}}">{{image}}</span>
      {{/if}}
      {{text}}
    </span>
  {{/if}}
{{/if}}
